<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.jyoung.honeystraw.ui.login.LoginActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"></android.support.v7.widget.Toolbar>


    <ImageView
        android:layout_below="@+id/login_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_title"/>








<Button
    android:background="@drawable/facebook_connect_button"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="20dp"
    android:layout_above="@+id/kakao_login_btn"
    android:id="@+id/facebook_login"
    android:layout_width="337dp"
    android:layout_height="89dp"
    android:onClick="facebookLoginOnClick"/>

    <com.kakao.usermgmt.LoginButton
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/kakao_login_btn"/>


</RelativeLayout>
