<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="300dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="15dp">


    <TextView
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="커버 방식을 선택해주세요"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">



        <LinearLayout
            android:background="@drawable/board_background_register"
            android:id="@+id/cover_type_full_item"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/cover_full"
                android:layout_width="140dp"
                android:layout_height="160dp"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cover_type_half_item"
            android:background="@drawable/board_background_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cover_type_full_item"
            android:layout_toEndOf="@+id/cover_type_full_item">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/cover_half"
                android:layout_width="140dp"
                android:layout_height="160dp"
                />
        </LinearLayout>



    </RelativeLayout>


</android.support.v7.widget.CardView>