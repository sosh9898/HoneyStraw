<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="정렬 방식을 선택해주세요"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:id="@+id/sort_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/recently_sort_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신 순"
                android:textColor="@color/colorBaseText"
                android:textSize="22sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewcount_sort_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조회 순"
                android:textColor="@color/colorBaseText"
                android:textSize="22sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/straw_sort_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빨대 순"
                android:textColor="@color/colorBaseText"
                android:textSize="22sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_sort_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글 순"
                android:textColor="@color/colorBaseText"
                android:textSize="22sp"/>


        </LinearLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>