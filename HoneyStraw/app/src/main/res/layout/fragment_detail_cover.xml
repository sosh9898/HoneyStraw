<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparencyCover">

    <TextView
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/cover_view_count"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:textColor="@color/splashBackground"
        tools:text="1300 View"/>

    <TextView
        android:id="@+id/cover_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="100dp"
        android:textColor="#fff"
        android:textSize="22sp"
        android:text="부스트캠프 b조 점심식사 꿀팁~ \n놀부부대찌개편"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cover_mypage_profile_image"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="400dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimary"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cover_mypage_profile_image"
        android:layout_marginTop="407dp"
        android:id="@+id/cover_mypage_profile_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="꿀팁매니저"
        android:textSize="19sp"
        android:textColor="@color/splashBackground"/>

    <TextView
        android:layout_marginLeft="105dp"
        android:layout_toRightOf="@+id/cover_mypage_profile_nick"
        android:layout_alignBottom="@+id/cover_mypage_profile_nick"
        android:layout_marginTop="411dp"
        android:id="@+id/cover_brand"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="#맥도날드"
        android:textSize="15sp"
        android:textColor="@color/splashBackground"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cover_mypage_profile_image"
        android:layout_marginTop="433dp"
        android:id="@+id/cover_postdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.08.13 23:00"
        android:textSize="15sp"
        android:textColor="@color/splashBackground"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_alignLeft="@+id/cover_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="누구누구 님의 상태메시지~"
        android:paddingLeft="16dp"
        android:id="@+id/cover_mypage_profile_status"/>



</RelativeLayout>