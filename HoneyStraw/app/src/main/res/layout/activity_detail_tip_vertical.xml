<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jyoung.honeystraw.ui.tip.DetailTipActivity">

    <ImageView
        android:id="@+id/detail_tip_background_image_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />

    <com.jyoung.honeystraw.base.VerticalViewPager
        android:id="@+id/tip_viewpager_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jyoung.honeystraw.base.VerticalViewPager>

    <RelativeLayout
        android:id="@+id/bottom_bar_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#bb000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="7dp"
            android:id="@+id/bottom_bar_page_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bottom_bar_page_image_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_action_app" />

            <TextView
                android:id="@+id/bottom_bar_page_text_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1/4"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="150dp"
            android:id="@+id/bottom_bar_comment_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/comment_selector"
                android:id="@+id/bottom_bar_comment_image_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/bottom_bar_comment_text_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="280dp"
            android:id="@+id/bottom_bar_straw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bottom_bar_straw_image_vertical"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/straw_unchecked" />

            <TextView
                android:id="@+id/bottom_bar_straw_text_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>



    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:src="@drawable/arrow_down"/>

</RelativeLayout>
